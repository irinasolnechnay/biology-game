    {q:"–°–∞–º–æ–µ —Ç–æ—á–Ω–æ–µ –æ–ø–∏—Å–∞–Ω–∏–µ —Ü–µ–Ω—Ç—Ä–æ—Å–æ–º—ã:", a:["–î–≤–∞ –æ—Ä–≥–∞–Ω–æ–∏–¥–∞ —Å —Ö–ª–æ—Ä–æ—Ñ–∏–ª–ª–æ–º","–ù–µ–º–µ–º–±—Ä–∞–Ω–Ω—ã–π –æ—Ä–≥–∞–Ω–æ–∏–¥: –¥–≤–µ —Ü–µ–Ω—Ç—Ä–∏–æ–ª–∏, —É—á–∞—Å—Ç–∏–µ –≤ –≤–µ—Ä–µ—Ç–µ–Ω–µ –¥–µ–ª–µ–Ω–∏—è","–î–≤—É–º–µ–º–±—Ä–∞–Ω–Ω—ã–π –æ—Ä–≥–∞–Ω–æ–∏–¥ —Å –î–ù–ö"], c:1, h:"–¶–µ–Ω—Ç—Ä–æ—Å–æ–º–∞ = 2 —Ü–µ–Ω—Ç—Ä–∏–æ–ª–∏.", e:"–ö–ª–µ—Ç–æ—á–Ω—ã–π —Ü–µ–Ω—Ç—Ä ‚Äî –Ω–µ–º–µ–º–±—Ä–∞–Ω–Ω—ã–π –æ—Ä–≥–∞–Ω–æ–∏–¥ –∂–∏–≤–æ—Ç–Ω—ã—Ö –∫–ª–µ—Ç–æ–∫: –¥–≤–µ —Ü–µ–Ω—Ç—Ä–∏–æ–ª–∏, —É—á–∞—Å—Ç–∏–µ –≤ –≤–µ—Ä–µ—Ç–µ–Ω–µ –¥–µ–ª–µ–Ω–∏—è."},
    {q:"–ö–∞–∫–∞—è —Å–≤—è–∑–∫–∞ ¬´—á–∏—Å–ª–æ ‚Üí —Å—Ç—Ä—É–∫—Ç—É—Ä–∞¬ª –≤–µ—Ä–Ω–∞—è –∏–º–µ–Ω–Ω–æ –¥–ª—è —Ü–µ–Ω—Ç—Ä–∏–æ–ª–∏?", a:["9 —Ç—Ä–∏–ø–ª–µ—Ç–æ–≤ –º–∏–∫—Ä–æ—Ç—Ä—É–±–æ—á–µ–∫","40S + 60S","–≥—Ä–∞–Ω—ã = —Å—Ç–æ–ø–∫–∏ —Ç–∏–ª–∞–∫–æ–∏–¥–æ–≤"], c:0, h:"–¶–µ–Ω—Ç—Ä–∏–æ–ª—å: 9√ó3.", e:"–ö–∞–∂–¥–∞—è —Ü–µ–Ω—Ç—Ä–∏–æ–ª—å —Å–æ—Å—Ç–æ–∏—Ç –∏–∑ 9 —Ç—Ä–∏–ø–ª–µ—Ç–æ–≤ –º–∏–∫—Ä–æ—Ç—Ä—É–±–æ—á–µ–∫."},
    {q:"–í—ã–±–µ—Ä–∏ —Å–∞–º–æ–µ ¬´–º—ã—Å–ª—è—â–µ–µ¬ª —Å—Ä–∞–≤–Ω–µ–Ω–∏–µ:", a:["–ú–∏—Ç–æ—Ö–æ–Ω–¥—Ä–∏—è –∏ —Ö–ª–æ—Ä–æ–ø–ª–∞—Å—Ç: –æ–±–∞ –¥–≤—É–º–µ–º–±—Ä–∞–Ω–Ω—ã–µ –∏ –∏–º–µ—é—Ç —Å–æ–±—Å—Ç–≤–µ–Ω–Ω—É—é –î–ù–ö/—Ä–∏–±–æ—Å–æ–º—ã","–†–∏–±–æ—Å–æ–º–∞ –∏ —Ö–ª–æ—Ä–æ–ø–ª–∞—Å—Ç: –æ–±–∞ –¥–≤—É–º–µ–º–±—Ä–∞–Ω–Ω—ã–µ","–¶–µ–Ω—Ç—Ä–∏–æ–ª—å –∏ –ª–µ–π–∫–æ–ø–ª–∞—Å—Ç: –æ–±–∞ —Å–æ–¥–µ—Ä–∂–∞—Ç –≥—Ä–∞–Ω—ã"], c:0, h:"–ò—â–∏ –æ–±—â–∏–µ –ø—Ä–∏–∑–Ω–∞–∫–∏ –∏–º–µ–Ω–Ω–æ –¥–≤—É–º–µ–º–±—Ä–∞–Ω–Ω—ã—Ö.", e:"–ú–∏—Ç–æ—Ö–æ–Ω–¥—Ä–∏–∏ –∏ –ø–ª–∞—Å—Ç–∏–¥—ã (–≤ —Ç.—á. —Ö–ª–æ—Ä–æ–ø–ª–∞—Å—Ç—ã) –¥–≤—É–º–µ–º–±—Ä–∞–Ω–Ω—ã–µ, –∏–º–µ—é—Ç —Å–æ–±—Å—Ç–≤–µ–Ω–Ω—ã–µ –î–ù–ö/—Ä–∏–±–æ—Å–æ–º—ã –∏ —Å–ø–æ—Å–æ–±–Ω—ã –¥–µ–ª–∏—Ç—å—Å—è."},
  ]
};

const levels = [level1, level2];

/* =========================
   –õ–æ–≥–∏–∫–∞ ¬´–í—Å–ø–æ–º–Ω–∏¬ª
   ========================= */
let levelIndex = null;
let qIndex = 0;
let score = 0;

let hintsOn = true;
let examMode = false;
let answered = false;

const content = document.getElementById("content");
const bar = document.getElementById("bar");
const chipLevel = document.getElementById("chipLevel");
const chipScore = document.getElementById("chipScore");
const chipCount = document.getElementById("chipCount");

const modeBadge = document.getElementById("modeBadge");
const hintBadge = document.getElementById("hintBadge");

const sceneIcon = document.getElementById("sceneIcon");
const sceneText = document.getElementById("sceneText");

const hintBox = document.getElementById("hintBox");

const feedback = document.getElementById("feedback");
const resultEl = document.getElementById("result");
const explainEl = document.getElementById("explain");

const actions = document.getElementById("actions");
const nextBtn = document.getElementById("nextBtn");
const menuBtn = document.getElementById("menuBtn");
const toggleHintsBtn = document.getElementById("toggleHintsBtn");

let playAll = false;
let scoreL1 = 0;

function updateHeader(){
  if(levelIndex === null){
    chipLevel.innerHTML = "<b>–£—Ä–æ–≤–µ–Ω—å:</b> ‚Äî";
    chipScore.innerHTML = "<b>–û—á–∫–∏:</b> 0";
    chipCount.innerHTML = "<b>–í–æ–ø—Ä–æ—Å:</b> ‚Äî";
    bar.style.width = "0%";
    modeBadge.textContent = "–ú–µ–Ω—é";
    hintBadge.textContent = hintsOn ? "üí° –ü–æ–¥—Å–∫–∞–∑–∫–∏: –≤–∫–ª—é—á–µ–Ω—ã" : "üí° –ü–æ–¥—Å–∫–∞–∑–∫–∏: –≤—ã–∫–ª—é—á–µ–Ω—ã";
    return;
  }
  const L = levels[levelIndex];
  chipLevel.innerHTML = `<b>–£—Ä–æ–≤–µ–Ω—å:</b> ${L.title}`;
  chipScore.innerHTML = `<b>–û—á–∫–∏:</b> ${score}`;
  chipCount.innerHTML = `<b>–í–æ–ø—Ä–æ—Å:</b> ${Math.min(qIndex+1, L.questions.length)}/${L.questions.length}`;
  bar.style.width = (qIndex / L.questions.length * 100) + "%";
  modeBadge.textContent = examMode ? "–†–µ–∂–∏–º: –≠–∫–∑–∞–º–µ–Ω" : "–†–µ–∂–∏–º: –¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞";
  hintBadge.textContent = hintsOn ? "üí° –ü–æ–¥—Å–∫–∞–∑–∫–∏: –≤–∫–ª—é—á–µ–Ω—ã" : "üí° –ü–æ–¥—Å–∫–∞–∑–∫–∏: –≤—ã–∫–ª—é—á–µ–Ω—ã";
}

function screenMenu(){
  levelIndex = null;
  qIndex = 0;
  score = 0;
  answered = false;
  playAll = false;
  scoreL1 = 0;

  feedback.style.display = "none";
  actions.style.display = "none";
  hintBox.style.display = "none";

  sceneIcon.textContent = "üß©";
  sceneText.innerHTML = `–í—ã–±–µ—Ä–∏ —Ä–µ–∂–∏–º. <b>–¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞</b> ‚Äî —Å –ø–æ–¥—Å–∫–∞–∑–∫–∞–º–∏. <b>–≠–∫–∑–∞–º–µ–Ω</b> ‚Äî –±–µ–∑ –ø–æ–¥—Å–∫–∞–∑–æ–∫, —Å—Ç—Ä–æ–∂–µ.`;

  updateHeader();

  content.innerHTML = `
    <div class="menu">
      <button class="menuBtn" id="trainAll">üéÄ –¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞: –æ–±–∞ —É—Ä–æ–≤–Ω—è (30)</button>
      <button class="menuBtn" id="examAll">üìù –≠–∫–∑–∞–º–µ–Ω: –æ–±–∞ —É—Ä–æ–≤–Ω—è (30)</button>
      <button class="menuBtn" id="trainL1">üéÄ –¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞: —É—Ä–æ–≤–µ–Ω—å 1</button>
      <button class="menuBtn" id="trainL2">üéÄ –¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞: —É—Ä–æ–≤–µ–Ω—å 2</button>
      <button class="menuBtn" id="examL1">üìù –≠–∫–∑–∞–º–µ–Ω: —É—Ä–æ–≤–µ–Ω—å 1</button>
      <button class="menuBtn" id="examL2">üìù –≠–∫–∑–∞–º–µ–Ω: —É—Ä–æ–≤–µ–Ω—å 2</button>
    </div>
    <div class="note">–í–æ–ø—Ä–æ—Å—ã —Å–¥–µ–ª–∞–Ω—ã —Ç–∞–∫, —á—Ç–æ–±—ã —É—á–µ–Ω–∏–∫ –Ω–µ —É–≥–∞–¥—ã–≤–∞–ª, –∞ <b>–æ–±—ä—è—Å–Ω—è–ª —Å–µ–±–µ –ª–æ–≥–∏–∫—É</b>.</div>
  `;

  document.getElementById("trainAll").onclick = ()=>start(0,true,false,true);
  document.getElementById("examAll").onclick  = ()=>start(0,true,true,false);

  document.getElementById("trainL1").onclick  = ()=>start(0,false,false,true);
  document.getElementById("trainL2").onclick  = ()=>start(1,false,false,true);
  document.getElementById("examL1").onclick   = ()=>start(0,false,true,false);
  document.getElementById("examL2").onclick   = ()=>start(1,false,true,false);
}

function start(lvl, both, exam, hints){
  playAll = !!both;
  levelIndex = lvl;
  qIndex = 0;
  score = 0;
  scoreL1 = 0;

  examMode = !!exam;
  hintsOn = !!hints;

  renderQuestion();
}

function renderQuestion(){
  answered = false;
  feedback.style.display = "none";
  actions.style.display = "none";
  hintBox.style.display = "none";
  nextBtn.textContent = "–î–∞–ª—å—à–µ ‚ûú";

  const L = levels[levelIndex];
  sceneIcon.textContent = L.sceneIcon;
  sceneText.textContent = L.sceneText;

  updateHeader();

  const item = L.questions[qIndex];

  content.innerHTML = `
    <div class="q">${item.q}</div>
    <div class="answers" id="answers"></div>
  `;

  const answersEl = document.getElementById("answers");
  item.a.forEach((t, idx)=>{
    const b = document.createElement("button");
    b.className = "ans";
    b.textContent = t;
    b.addEventListener("click", ()=>choose(idx));
    answersEl.appendChild(b);
  });

  // –ø–æ–¥—Å–∫–∞–∑–∫–∞ (—Ç–æ–ª—å–∫–æ –≤ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–µ –∏ –µ—Å–ª–∏ –≤–∫–ª—é—á–µ–Ω—ã)
  if(!examMode && hintsOn && item.h){
    hintBox.style.display = "block";
    hintBox.innerHTML = `üí° <b>–ü–æ–¥—É–º–∞–π:</b> ${item.h}`;
  }
}

function lockAnswers(){
  document.querySelectorAll(".ans").forEach(b=>b.disabled=true);
}

function choose(idx){
  if(answered) return;
  answered = true;

  const L = levels[levelIndex];
  const item = L.questions[qIndex];

  const ok = (idx === item.c);
  if(ok) score++;

  lockAnswers();
  updateHeader();

  // –æ–±—ä—è—Å–Ω–µ–Ω–∏–µ: –≤ —ç–∫–∑–∞–º–µ–Ω–µ –æ—Å—Ç–∞–≤–ª—è–µ–º ¬´—Å—É—Ö–æ¬ª, –≤ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–µ ‚Äî –º–æ–∂–Ω–æ –º—è–≥—á–µ
  const goodMsgs = ["–û—Ç–ª–∏—á–Ω–æ ‚ú®","–°—É–ø–µ—Ä! üî•","–¢–∞–∫ –¥–µ—Ä–∂–∞—Ç—å üíó","–ö–ª–∞—Å—Å–Ω–æ üåü"];
  const badMsgs  = ["–ù–∏—á–µ–≥–æ, —Å–µ–π—á–∞—Å —Ä–∞–∑–±–µ—Ä—ë–º—Å—è üí™","–û—à–∏–±–∫–∏ ‚Äî —ç—Ç–æ —Ä–æ—Å—Ç üß†","–°–µ–π—á–∞—Å —Å—Ç–∞–Ω–µ—Ç –ø–æ–Ω—è—Ç–Ω–µ–µ üå∏"];
  const motiv = examMode ? "" : `<div style="margin-top:8px;color:var(--muted);">${ok ? goodMsgs[Math.floor(Math.random()*goodMsgs.length)] : badMsgs[Math.floor(Math.random()*badMsgs.length)]}</div>`;

  feedback.style.display = "block";
  actions.style.display = "flex";

  resultEl.innerHTML = ok
    ? `<span class="good">‚úÖ –í–µ—Ä–Ω–æ.</span>`
    : `<span class="bad">‚ùå –û—à–∏–±–∫–∞.</span>`;

  explainEl.innerHTML = `${item.e}${motiv}`;

  feedback.scrollIntoView({behavior:"smooth", block:"start"});
}

function finishLevel(){
  const L = levels[levelIndex];
  bar.style.width = "100%";

  content.innerHTML = `
    <div class="q">‚úÖ –£—Ä–æ–≤–µ–Ω—å –∑–∞–≤–µ—Ä—à—ë–Ω: ${L.title}</div>
    <div class="note">
      –†–µ–∑—É–ª—å—Ç–∞—Ç —É—Ä–æ–≤–Ω—è: <b>${score}</b> / <b>${L.questions.length}</b>.<br>
      –ù–∞–∂–º–∏ ¬´–î–∞–ª—å—à–µ¬ª, —á—Ç–æ–±—ã –ø—Ä–æ–¥–æ–ª–∂–∏—Ç—å.
    </div>
  `;

  feedback.style.display = "none";
  actions.style.display = "flex";
  nextBtn.textContent = (playAll && levelIndex===0) ? "–ö —É—Ä–æ–≤–Ω—é 2 ‚ûú" : "–ò—Ç–æ–≥ ‚ûú";
}

function finishAll(){
  bar.style.width = "100%";
  chipCount.innerHTML = "<b>–í–æ–ø—Ä–æ—Å:</b> ‚Äî";
  chipLevel.innerHTML = "<b>–£—Ä–æ–≤–µ–Ω—å:</b> üéâ –ò—Ç–æ–≥";

  content.innerHTML = `
    <div class="q">üéâ –ì–æ—Ç–æ–≤–æ! 30 –≤–æ–ø—Ä–æ—Å–æ–≤ –ø—Ä–æ–π–¥–µ–Ω—ã</div>
    <div class="note">
      –ò—Ç–æ–≥–æ–≤—ã–µ –æ—á–∫–∏: <b>${score}</b> / <b>30</b>.<br>
      –•–æ—á–µ—à—å –∑–∞–∫—Ä–µ–ø–∏—Ç—å ‚Äî –ø—Ä–æ–π–¥–∏ –µ—â—ë —Ä–∞–∑ –≤ ¬´–≠–∫–∑–∞–º–µ–Ω–µ¬ª.
    </div>
  `;

  feedback.style.display = "none";
  actions.style.display = "flex";
  nextBtn.textContent = "–í –º–µ–Ω—é ‚ûú";
}

nextBtn.addEventListener("click", ()=>{
  if(levelIndex === null){
    screenMenu();
    return;
  }

  const L = levels[levelIndex];

  // –µ—Å–ª–∏ –µ—â—ë –Ω–µ –æ—Ç–≤–µ—á–µ–Ω–æ ‚Äî –ø–æ –º–∞–Ω–∏—Ñ–µ—Å—Ç—É –¥–∞–ª—å—à–µ –Ω–µ –∏–¥—ë–º
  if(qIndex < L.questions.length && !answered) return;

  // –µ—Å–ª–∏ –º—ã –¥–æ—à–ª–∏ –¥–æ –∫–æ–Ω—Ü–∞ —É—Ä–æ–≤–Ω—è
  if(qIndex >= L.questions.length){
    if(playAll && levelIndex === 0){
      scoreL1 = score;
      levelIndex = 1;
      qIndex = 0;
      score = scoreL1; // –∫–æ–ø–∏–º –æ–±—â–∏–π
      renderQuestion();
      return;
    }
    // —Ñ–∏–Ω–∞–ª
    finishAll();
    levelIndex = null;
    return;
  }

  // —Å–ª–µ–¥—É—é—â–∏–π –≤–æ–ø—Ä–æ—Å
  qIndex++;
  if(qIndex < L.questions.length){
    renderQuestion();
  } else {
    qIndex = L.questions.length;
    finishLevel();
  }
});

menuBtn.addEventListener("click", screenMenu);

toggleHintsBtn.addEventListener("click", ()=>{
  hintsOn = !hintsOn;
  if(examMode) hintsOn = false;
  hintBadge.textContent = hintsOn ? "üí° –ü–æ–¥—Å–∫–∞–∑–∫–∏: –≤–∫–ª—é—á–µ–Ω—ã" : "üí° –ü–æ–¥—Å–∫–∞–∑–∫–∏: –≤—ã–∫–ª—é—á–µ–Ω—ã";
  // –µ—Å–ª–∏ –Ω–∞ –≤–æ–ø—Ä–æ—Å–µ ‚Äî –ø—Ä–æ—Å—Ç–æ –ø–µ—Ä–µ—Ä–∏—Å—É–µ–º –µ–≥–æ, —á—Ç–æ–±—ã –ø–æ–¥—Å–∫–∞–∑–∫–∞ –ø–æ—è–≤–∏–ª–∞—Å—å/—Å–∫—Ä—ã–ª–∞—Å—å
  if(levelIndex !== null && qIndex < levels[levelIndex].questions.length){
    renderQuestion();
  }
});

// —Å—Ç–∞—Ä—Ç
screenMenu();
</script>
